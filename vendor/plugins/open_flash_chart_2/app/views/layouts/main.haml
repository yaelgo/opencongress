    //    dp.SyntaxHighlighter.ClipboardSwf = '/clipboard.swf';
    //    dp.SyntaxHighlighter.HighlightAll('code');
    //    </script>
    - javascript_tag do
      SyntaxHighlighter.config.clipboardSwf = '/clipboard.swf';
      SyntaxHighlighter.all();
    = google_analitycs_js
