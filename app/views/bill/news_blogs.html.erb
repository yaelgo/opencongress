<%= render :partial => 'shared/sort_commentary', 
                                :locals => { :object_type => 'bill', :object_id => @bill.ident } %>
<%= render :partial => 'nbtabs' %>
<div class="clearfix"> 
<% cache("#{@bill.fragment_cache_key}_#{params[:action]}_#{@sort}") do %>
  <!-- cached: <%= "#{@bill.fragment_cache_key}_#{params[:action]}_#{@sort}" %> // <%= Time.now %> -->
<div class="col1" id ="news_list">
	<h4 class="short">News Coverage</h5>
  <%= render :partial => 'shared/news', :object => @news,
    :locals => { :limit => 10, :all_size => @news.size, :default_title => @bill.title_typenumber_only, :short => true,
                 :more_url => { :controller => 'bill', :action => 'news', :id => @bill.ident } } %>
</div>
<div class="col2" id="blogs_list">
	<h4 class="short">Blog Coverage</h5>
							  <%= render :partial => 'shared/blogs', :object => @blogs,
							    :locals => { :limit => 10, :all_size => @blogs.size, :default_title => @bill.title_typenumber_only, :short => true,
							                 :more_url => { :controller => 'bill', :action => 'blogs', :id => @bill.ident } } %>
</div>
<% end %>
</div>