<%= render :partial => 'nbtabs' %>

<%= render :partial => 'shared/sort_commentary', 
                                :locals => { :object_type => 'person', :object_id => @person } %>
<div class="clearfix"> 
<% cache("#{@person.fragment_cache_key}_#{params[:action]}_#{@sort}") do %>
  <!-- cached: <%= "#{@person.fragment_cache_key}_#{params[:action]}_#{@sort}" %> // <%= Time.now %> -->
<div class="col1" id ="news_list">
	<h4 class="short">News Coverage</h5>
  <%= render :partial => 'shared/news', :object => @news, :locals => { :limit => 10, :all_size => @news.size, :short => true, :default_title => @person.popular_name, :more_url => { :controller => 'people', :action => 'news', :id => @person } } %>
</div>
<div class="col2" id="blogs_list">
	<h4 class="short">Blog Coverage</h5>
							  <%= render :partial => 'shared/blogs', :object => @blogs, :locals => { :limit => 10, :all_size => @blogs.size, :default_title => @person.popular_name,  :short => true, :more_url => { :controller => 'people', :action => 'blogs', :id => @person } } %>
</div>
<% end %>
</div>